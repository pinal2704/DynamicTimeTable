@using DynamicTimeTable.Models
@model IEnumerable<TimetableConfiguration>

@{
    ViewData["Title"] = "Saved Timetables";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Saved Timetables</h3>
                    <a asp-action="Index" class="btn btn-light">Create New</a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Working Days</th>
                                        <th>Subjects Per Day</th>
                                        <th>Total Subjects</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.WorkingDays</td>
                                            <td>@item.SubjectsPerDay</td>
                                            <td>@item.TotalSubjects</td>
                                            <td>@item.CreatedAt.ToString("g")</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No timetables have been saved yet. <a asp-action="Index">Create your first timetable</a>.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>